{
  "manifest_version": 3,
  "name": "InboxPilot â€” AI Email Manager",
  "version": "0.1.0",
  "description": "AI-powered email categorization and inbox cleanup for Gmail",
  "permissions": ["storage", "sidePanel", "activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "src/service-worker/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/content/isolated.ts"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "InboxPilot"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "src/assets/icon-16.png",
    "48": "src/assets/icon-48.png",
    "128": "src/assets/icon-128.png"
  }
}
